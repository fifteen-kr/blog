---js
const eleventyNavigation = {
    key: "Home",
    order: 1,
};

const numberOfLatestPostsToShow = 3;
---
{% set postCount = collections.posts | length %}
{% set latestpostCount = postCount | min(numberOfLatestPostsToShow) %}
<h1>Latest {{ latestpostCount }} Post{% if latestpostCount != 1 %}s{% endif %}</h1>

{% set posts = collections.posts | head(-1 * numberOfLatestPostsToShow) %}
{% set postCounter = postCount %}
{% include "posts.njk" %}

{% set moreposts = postCount - numberOfLatestPostsToShow %}
{% if moreposts > 0 %}
<p>{{ moreposts }} more post{% if moreposts != 1 %}s{% endif %} can be found in <a href="post.njk">the archive</a>.</p>
{% endif %}